{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5010"
  },
  "Routes": [
    //Default path
    {
      "DownstreamPathTemplate": "/api/v1/Product/GetProducts",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/GetProducts",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT"
      ],
      "FileCacheOptions": {
        "TtlSeconds": 30
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    //Catalog API
    {
      "DownstreamPathTemplate": "/api/v1/Product",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/Product",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": false,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      "FileCacheOptions": { "TtlSeconds": 30 }
    },
    {
      "DownstreamPathTemplate": "/api/v1/Product/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/Product/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Product/GetProductByCategory/{category}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/Product/GetProductByCategory/{category}",
      "UpstreamHttpMethod": [ "GET" ]
    },
